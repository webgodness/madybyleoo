-- Variáveis do script
local player = game.Players.LocalPlayer
local attacker = player.Character
local maxAttackDistance = 999  -- Raio de teleporte aumentado para 999
local autoFarmEnabled = false
local walkSpeed = 16 -- Velocidade inicial do personagem
local speedEnabled = false -- Variável para verificar se a função de velocidade foi ativada
local menuVisible = true -- Variável para controlar a visibilidade do menu

-- Função para criar o Menu
local function createMenu()
    -- Criar a GUI
    local screenGui = Instance.new("ScreenGui")
    screenGui.Parent = player:WaitForChild("PlayerGui")

    -- Criar o frame maior
    local frame = Instance.new("Frame")
    frame.Parent = screenGui
    frame.Size = UDim2.new(0, 520, 0, 520)  -- Tamanho do menu ajustado
    frame.Position = UDim2.new(0.5, -260, 0.5, -260)  -- Centralizado na tela
    frame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)  -- Fundo escuro (cinza)
    frame.BorderSizePixel = 0
    frame.AnchorPoint = Vector2.new(0.5, 0.5)  -- Centralizar no meio da tela
    frame.BackgroundTransparency = 0.3  -- Transparência suave para um efeito de sombra
    frame.ClipsDescendants = true  -- Para que os filhos do frame não saiam dos limites

    -- Função para mover o menu com o mouse
    local dragging = false
    local dragInput, dragStart, startPos

    -- Quando o mouse pressiona no frame
    frame.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            startPos = frame.Position
        end
    end)

    -- Quando o mouse move
    frame.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local delta = input.Position - dragStart
            frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
        end
    end)

    -- Quando o mouse solta o botão
    frame.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)

    -- Adicionar a marca d'água "Made By Leoo" no topo do menu
    local watermarkLabel = Instance.new("TextLabel")
    watermarkLabel.Parent = frame
    watermarkLabel.Size = UDim2.new(0, 200, 0, 30)
    watermarkLabel.Position = UDim2.new(0.5, -100, 0, 20)
    watermarkLabel.BackgroundTransparency = 1
    watermarkLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    watermarkLabel.Text = "Made By Leoo"
    watermarkLabel.TextScaled = true
    watermarkLabel.TextTransparency = 0.5  -- Tornar o texto semi-transparente
    watermarkLabel.Font = Enum.Font.GothamSemibold  -- Fonte moderna e limpa
    watermarkLabel.TextSize = 16

    -- Adicionar o link do Discord no centro inferior do menu
    local discordLabel = Instance.new("TextLabel")
    discordLabel.Parent = frame
    discordLabel.Size = UDim2.new(0, 200, 0, 20)
    discordLabel.Position = UDim2.new(0.5, -100, 1, -30)
    discordLabel.BackgroundTransparency = 1
    discordLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    discordLabel.Text = "https://discord.gg/p4drBcNg3H"
    discordLabel.TextScaled = true
    discordLabel.TextSize = 12
    discordLabel.Font = Enum.Font.Gotham

    -- Criar o botão de AutoFarm
    local autoFarmButton = Instance.new("TextButton")
    autoFarmButton.Parent = frame
    autoFarmButton.Size = UDim2.new(0, 200, 0, 40)  -- Tamanho maior para o botão
    autoFarmButton.Position = UDim2.new(0.5, -100, 0, 80)
    autoFarmButton.BackgroundColor3 = Color3.fromRGB(0, 0, 139)  -- Azul escuro
    autoFarmButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    autoFarmButton.Text = "AutoFarm"
    autoFarmButton.Font = Enum.Font.GothamBold
    autoFarmButton.TextSize = 18
    autoFarmButton.TextScaled = true
    autoFarmButton.BorderSizePixel = 0
    autoFarmButton.AnchorPoint = Vector2.new(0.5, 0.5)
    autoFarmButton.BackgroundTransparency = 0.3  -- Transparência suave
    autoFarmButton.ClipsDescendants = true

    -- Função para alternar o AutoFarm
    autoFarmButton.MouseButton1Click:Connect(function()
        autoFarmEnabled = not autoFarmEnabled

        if autoFarmEnabled then
            autoFarmButton.Text = "Desativar"
            autoFarmButton.BackgroundColor3 = Color3.fromRGB(139, 0, 0)  -- Vermelho escuro
        else
            autoFarmButton.Text = "AutoFarm"
            autoFarmButton.BackgroundColor3 = Color3.fromRGB(0, 0, 139)  -- Azul escuro
        end
    end)

    -- Criar o botão de Velocidade
    local speedButton = Instance.new("TextButton")
    speedButton.Parent = frame
    speedButton.Size = UDim2.new(0, 200, 0, 40)
    speedButton.Position = UDim2.new(0.5, -100, 0, 140)
    speedButton.BackgroundColor3 = Color3.fromRGB(0, 0, 139)  -- Azul escuro
    speedButton.TextColor3 = Color3.fromRGB(255, 255, 255)
    speedButton.Text = "Velocidade"
    speedButton.Font = Enum.Font.GothamBold
    speedButton.TextSize = 18
    speedButton.TextScaled = true
    speedButton.BorderSizePixel = 0
    speedButton.AnchorPoint = Vector2.new(0.5, 0.5)
    speedButton.BackgroundTransparency = 0.3
    speedButton.ClipsDescendants = true

    -- Função para alternar a função de velocidade
    speedButton.MouseButton1Click:Connect(function()
        speedEnabled = not speedEnabled  -- Alterna o estado da função de velocidade

        if speedEnabled then
            speedButton.Text = "Desativar Veloc"
            speedButton.BackgroundColor3 = Color3.fromRGB(139, 0, 0)  -- Vermelho escuro
        else
            speedButton.Text = "Velocidade"
            speedButton.BackgroundColor3 = Color3.fromRGB(0, 0, 139)  -- Azul escuro
        end
    end)

    -- Criar a barra deslizante para controlar a velocidade
    local speedSlider = Instance.new("Frame")
    speedSlider.Parent = frame
    speedSlider.Size = UDim2.new(0, 200, 0, 10)
    speedSlider.Position = UDim2.new(0.5, -100, 0, 210)
    speedSlider.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
    speedSlider.BorderSizePixel = 0
    speedSlider.ClipsDescendants = true

    local speedBar = Instance.new("Frame")
    speedBar.Parent = speedSlider
    speedBar.Size = UDim2.new(walkSpeed / 516, 0, 1, 0)
    speedBar.BackgroundColor3 = Color3.fromRGB(139, 0, 0)  -- Vermelho escuro

    -- **Modificação**: Posicionar a Label da Velocidade centralizada na tela
    local speedLabel = Instance.new("TextLabel")
    speedLabel.Parent = frame
    speedLabel.Size = UDim2.new(0, 200, 0, 40)
    speedLabel.Position = UDim2.new(0.5, -100, 0, 250)
    speedLabel.BackgroundTransparency = 1
    speedLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
    speedLabel.Text = "Velocidade: " .. walkSpeed
    speedLabel.Font = Enum.Font.GothamBold
    speedLabel.TextSize = 18
    speedLabel.TextScaled = true

    -- Função para alterar a velocidade
    speedSlider.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 and speedEnabled then
            local mousePos = input.Position.X - speedSlider.AbsolutePosition.X
            local clampedValue = math.clamp(mousePos / speedSlider.AbsoluteSize.X, 0, 1)  -- Valor entre 0 e 1
            walkSpeed = math.floor(clampedValue * 516)  -- A velocidade vai de 0 a 516
            speedBar.Size = UDim2.new(clampedValue, 0, 1, 0)  -- Atualiza a barra
            speedLabel.Text = "Velocidade: " .. walkSpeed  -- Atualiza o texto da velocidade
            attacker.Humanoid.WalkSpeed = walkSpeed  -- Aplica a velocidade ao personagem
        end
    end)

    -- Função para alternar a visibilidade do menu com a tecla Ctrl
    game:GetService("UserInputService").InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.Keyboard and input.KeyCode == Enum.KeyCode.LeftControl then
            menuVisible = not menuVisible  -- Alterna a visibilidade do menu
            frame.Visible = menuVisible  -- Exibe ou oculta o menu
        end
    end)
end

-- Criar o menu quando o jogo inicia
createMenu()
